<% content_for :title, "Edit profile" %>
<% content_for :native_signals, native_form_tag %>

<div class="mt-4">
  <h1 class="text-2xl font-bold text-coffee-800 dark:text-coffee-100 <%= "hidden" if native_app? %>">
    Edit profile
  </h1>

  <% if current_user.errors.any? %>
    <div class="mt-4 p-4 rounded-xl bg-red-50 dark:bg-red-900/30 text-red-800 dark:text-red-200 text-sm">
      <p class="font-semibold mb-1">Please fix these issues:</p>
      <ul class="list-disc list-inside">
        <% current_user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: current_user, url: account_path, class: "mt-6 space-y-4" do |form| %>
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-coffee-700 dark:text-coffee-300 mb-1" %>
      <%= form.text_field :name, class: "w-full rounded-xl border border-coffee-200 dark:border-coffee-700 bg-white dark:bg-coffee-900 px-4 py-3 text-coffee-900 dark:text-coffee-100 placeholder-coffee-400 focus:outline-none focus:ring-2 focus:ring-coffee-500" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-medium text-coffee-700 dark:text-coffee-300 mb-1" %>
      <%= form.email_field :email, class: "w-full rounded-xl border border-coffee-200 dark:border-coffee-700 bg-white dark:bg-coffee-900 px-4 py-3 text-coffee-900 dark:text-coffee-100 placeholder-coffee-400 focus:outline-none focus:ring-2 focus:ring-coffee-500" %>
    </div>

    <div>
      <%= form.label :favorite_store, class: "block text-sm font-medium text-coffee-700 dark:text-coffee-300 mb-1" %>
      <%= form.text_field :favorite_store, class: "w-full rounded-xl border border-coffee-200 dark:border-coffee-700 bg-white dark:bg-coffee-900 px-4 py-3 text-coffee-900 dark:text-coffee-100 placeholder-coffee-400 focus:outline-none focus:ring-2 focus:ring-coffee-500", placeholder: "e.g. Downtown" %>
    </div>

    <div>
      <%= form.submit "Save changes", class: "w-full rounded-xl bg-coffee-800 dark:bg-coffee-200 text-white dark:text-coffee-900 font-semibold py-3 hover:bg-coffee-700 dark:hover:bg-coffee-300 transition cursor-pointer" %>
    </div>
  <% end %>
</div>
