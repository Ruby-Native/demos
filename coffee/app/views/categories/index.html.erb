<% content_for :title, "Menu" %>

<div class="mt-4">
  <h1 class="text-2xl font-bold text-coffee-800 dark:text-coffee-100 <%= "hidden" if native_app? %>">
    Menu
  </h1>

  <div class="grid grid-cols-2 gap-3 mt-4">
    <% @categories.each do |category| %>
      <%= link_to category_path(category), class: "block rounded-2xl overflow-hidden bg-white dark:bg-coffee-900 shadow-sm hover:shadow-md transition no-underline" do %>
        <% if category.image_url.present? %>
          <%= image_tag category.image_url, class: "w-full h-28 object-cover", alt: category.name %>
        <% else %>
          <div class="w-full h-28 bg-coffee-200 dark:bg-coffee-800"></div>
        <% end %>
        <div class="p-3">
          <h2 class="font-semibold text-coffee-800 dark:text-coffee-100 text-sm"><%= category.name %></h2>
          <p class="text-xs text-coffee-500 dark:text-coffee-400 mt-0.5 line-clamp-2"><%= category.description %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
