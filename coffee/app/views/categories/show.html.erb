<% content_for :title, @category.name %>

<div class="mt-4">
  <h1 class="text-2xl font-bold text-coffee-800 dark:text-coffee-100 <%= "hidden" if native_app? %>">
    <%= @category.name %>
  </h1>

  <div class="mt-4 space-y-3">
    <% @category.products.each do |product| %>
      <%= link_to category_item_path(@category, product), class: "flex items-center gap-4 p-3 rounded-2xl bg-white dark:bg-coffee-900 shadow-sm hover:shadow-md transition no-underline" do %>
        <% if product.image_url.present? %>
          <%= image_tag product.image_url, class: "w-20 h-20 rounded-xl object-cover shrink-0", alt: product.name %>
        <% else %>
          <div class="w-20 h-20 rounded-xl bg-coffee-200 dark:bg-coffee-800 shrink-0"></div>
        <% end %>
        <div class="flex-1 min-w-0">
          <h2 class="font-semibold text-coffee-800 dark:text-coffee-100"><%= product.name %></h2>
          <p class="text-sm text-coffee-500 dark:text-coffee-400 mt-0.5 line-clamp-2"><%= product.description %></p>
          <p class="text-sm font-semibold text-green-700 dark:text-green-400 mt-1"><%= product.display_price %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
