<% content_for :title, "Rewards" %>

<div class="mt-4">
  <h1 class="text-2xl font-bold text-coffee-800 dark:text-coffee-100 <%= "hidden" if native_app? %>">
    Rewards
  </h1>

  <%# Points balance card %>
  <div class="mt-4 p-6 rounded-2xl bg-coffee-800 dark:bg-coffee-200 text-white dark:text-coffee-900 text-center">
    <p class="text-sm font-medium opacity-80">Your balance</p>
    <p class="text-4xl font-bold mt-1"><%= @points %></p>
    <p class="text-sm font-medium opacity-80 mt-1">points</p>
  </div>

  <%# Progress to next reward %>
  <div class="mt-4 p-4 rounded-2xl bg-white dark:bg-coffee-900 shadow-sm">
    <div class="flex items-center justify-between mb-2">
      <span class="text-sm font-medium text-coffee-700 dark:text-coffee-300">Next reward</span>
      <span class="text-sm font-medium text-coffee-500 dark:text-coffee-400"><%= @points %>/<%= @next_reward_at %></span>
    </div>
    <div class="w-full h-3 bg-coffee-100 dark:bg-coffee-800 rounded-full overflow-hidden">
      <div class="h-full bg-coffee-800 dark:bg-coffee-200 rounded-full transition-all" style="width: <%= @progress %>%"></div>
    </div>
    <p class="text-xs text-coffee-500 dark:text-coffee-400 mt-2"><%= @next_reward_at - @points %> points until a free drink</p>
  </div>

  <%# Available rewards %>
  <div class="mt-6">
    <h2 class="text-sm font-semibold text-coffee-500 dark:text-coffee-400 uppercase tracking-wide">Available rewards</h2>
    <div class="mt-2 space-y-2">
      <% [
        { name: "Free drip coffee", points: 150, icon: "â˜•" },
        { name: "Free pastry", points: 200, icon: "ðŸ¥" },
        { name: "Free any drink", points: 500, icon: "â­" }
      ].each do |reward| %>
        <div class="flex items-center justify-between p-3 rounded-xl bg-white dark:bg-coffee-900 shadow-sm">
          <div class="flex items-center gap-3">
            <span class="text-xl"><%= reward[:icon] %></span>
            <span class="text-sm font-medium text-coffee-800 dark:text-coffee-100"><%= reward[:name] %></span>
          </div>
          <span class="text-xs font-semibold px-2.5 py-1 rounded-full
            <% if @points >= reward[:points] %>
              bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300
            <% else %>
              bg-coffee-100 text-coffee-500 dark:bg-coffee-800 dark:text-coffee-400
            <% end %>
          "><%= reward[:points] %> pts</span>
        </div>
      <% end %>
    </div>
  </div>

  <%# Recent activity %>
  <div class="mt-6">
    <h2 class="text-sm font-semibold text-coffee-500 dark:text-coffee-400 uppercase tracking-wide">Recent activity</h2>
    <div class="mt-2 space-y-1">
      <% @activities.each do |activity| %>
        <div class="flex items-center justify-between py-2.5">
          <div>
            <p class="text-sm font-medium text-coffee-800 dark:text-coffee-100"><%= activity.description %></p>
            <p class="text-xs text-coffee-400"><%= time_ago_in_words(activity.created_at) %> ago</p>
          </div>
          <span class="text-sm font-semibold <%= activity.points >= 0 ? "text-green-700 dark:text-green-400" : "text-red-600 dark:text-red-400" %>">
            <%= activity.points >= 0 ? "+#{activity.points}" : activity.points %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>
