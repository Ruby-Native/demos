<%= return if native_app? && !user_signed_in? %>

<nav class="fixed top-0 inset-x-0 z-50 bg-cream dark:bg-cream-dark border-b border-coffee-200 dark:border-coffee-800">
  <div class="max-w-[480px] mx-auto px-4 h-12 flex items-center justify-between">
    <% if native_app? %>
      <div class="w-10">
        <%= native_back_button %>
      </div>

      <span class="font-semibold text-coffee-800 dark:text-coffee-100">
        <%= content_for(:title).presence || "Daily Grind" %>
      </span>

      <div class="w-10">
        <% if user_signed_in? %>
          <%= link_to cart_path, class: "relative text-coffee-600 dark:text-coffee-300" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
            </svg>
            <% if cart_count > 0 %>
              <span class="absolute -top-1.5 -right-1.5 bg-coffee-800 dark:bg-coffee-200 text-white dark:text-coffee-900 text-xs font-bold rounded-full w-4 h-4 flex items-center justify-center"><%= cart_count %></span>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <% if user_signed_in? %>
        <%= link_to "Daily Grind", categories_path, class: "font-bold text-coffee-800 dark:text-coffee-100 no-underline" %>
      <% else %>
        <%= link_to "Daily Grind", root_path, class: "font-bold text-coffee-800 dark:text-coffee-100 no-underline" %>
      <% end %>

      <div class="flex items-center gap-4">
        <% if user_signed_in? %>
          <%= link_to cart_path, class: "relative text-coffee-600 dark:text-coffee-300" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
            </svg>
            <% if cart_count > 0 %>
              <span class="absolute -top-1.5 -right-1.5 bg-coffee-800 dark:bg-coffee-200 text-white dark:text-coffee-900 text-xs font-bold rounded-full w-4 h-4 flex items-center justify-center"><%= cart_count %></span>
            <% end %>
          <% end %>
          <%= button_to "Sign out", session_path, method: :delete, class: "text-sm text-coffee-600 dark:text-coffee-300 hover:text-coffee-800 dark:hover:text-coffee-100" %>
        <% else %>
          <%= link_to "Sign in", new_session_path, class: "text-sm font-medium text-coffee-800 dark:text-coffee-100" %>
        <% end %>
      </div>
    <% end %>
  </div>
</nav>
