<% if link.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p class="alert-heading fw-semibold mb-1">Please fix these issues:</p>
    <ul class="mb-0">
      <% link.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: link, class: "row g-3 mt-1" do |form| %>
  <div>
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :url, "URL", class: "form-label" %>
    <%= form.url_field :url, class: "form-control", placeholder: "https://" %>
  </div>

  <div>
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 3 %>
  </div>

  <div>
    <%= label_tag :tags, "Tags (comma-separated)", class: "form-label" %>
    <%= text_field_tag "link[tags]", link.tags.map(&:name).join(", "), class: "form-control", placeholder: "ruby, rails, ios" %>
  </div>

  <div class="d-grid d-sm-flex justify-content-sm-end mt-4">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
