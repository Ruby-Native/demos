<%= render "shared/header", title: @link.title %>

<div class="container">
  <p class="text-body-secondary mt-1">
    <%= link_to @link.url, @link.url, target: "_blank", rel: "noopener" %>
  </p>

  <% if @link.description.present? %>
    <p class="mt-3"><%= @link.description %></p>
  <% end %>

  <% if @link.tags.any? %>
    <div class="d-flex gap-1 flex-wrap mt-3">
      <% @link.tags.each do |tag| %>
        <%= link_to tag.name, tag, class: "badge border text-secondary text-decoration-none" %>
      <% end %>
    </div>
  <% end %>

  <div class="d-flex align-items-center mt-4">
    <div class="btn-group w-100">
      <%= link_to edit_link_path(@link), class: "btn btn-outline-primary" do %>
        <i class="bi bi-pencil"></i> Edit
      <% end %>

      <%= link_to link_path(@link), data: {turbo_method: "delete", turbo_confirm: "Remove this link?"}, class: "btn btn-outline-danger" do %>
        <i class="bi bi-trash"></i> Remove
      <% end %>
    </div>
  </div>

  <p class="text-body-secondary small mt-3">
    Saved on <%= @link.created_at.strftime("%B %d, %Y") %>
  </p>
</div>
