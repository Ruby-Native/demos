<% content_for :head, native_form_tag %>
<%= render "shared/header", title: "Edit profile" %>

<div class="container">
  <% if @user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p class="alert-heading fw-semibold mb-1">Please fix these issues:</p>
      <ul class="mb-0">
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @user, url: profile_path, class: "row g-3 mt-1" do |form| %>
    <div>
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div>
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="d-grid d-sm-flex justify-content-sm-end mt-4">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
