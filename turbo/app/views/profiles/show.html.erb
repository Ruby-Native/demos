<%= render "shared/header", title: "Profile" %>

<div class="container">
  <div class="list-group list-group-flush">
    <div class="list-group-item py-3 d-flex justify-content-between">
      <span class="text-body-secondary">Name</span>
      <span><%= @user.name.presence || "Not set" %></span>
    </div>

    <div class="list-group-item py-3 d-flex justify-content-between">
      <span class="text-body-secondary">Email</span>
      <span><%= @user.email %></span>
    </div>
  </div>

  <div class="d-flex justify-content-between gap-2 mt-4">
    <%= link_to "Edit profile", edit_profile_path, class: "btn btn-outline-primary flex-grow-1 flex-sm-grow-0" %>
    <% unless native_app? %>
      <%= link_to "Sign out", session_path, class: "btn btn-outline-danger", "data-turbo-method": "delete", "data-turbo-action": "replace" %>
    <% end %>
  </div>
</div>
